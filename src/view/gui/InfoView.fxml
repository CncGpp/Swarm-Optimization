                     <children>
                        <Label text="Botola">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label text="I microbot che si muovono su di una botola verranno teletrasportati in una posizione casuale della mappa" wrapText="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="8.0" right="5.0" top="5.0" />
